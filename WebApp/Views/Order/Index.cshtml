@{
    ViewData["Title"] = "Pedido";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1 class="text-center display-4 mb-3">Bienvenido</h1>

<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Cliente</label>
        <div class="col-sm-10">
            @Html.DropDownList("ddlClient", (IEnumerable<SelectListItem>)ViewBag.Clients, new {@class = "form-control select-filter" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Producto</label>
        <div class="col-sm-10">
            @Html.DropDownList("ddlProduct", (IEnumerable<SelectListItem>)ViewBag.Products, new { @class = "form-control select-filter"})
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Cantidad</label>
        <div class="col-sm-2">
            <input type="number" class="form-control form-control-sm" id="txtQuantity">
        </div>
        <label class="col-sm-2 col-form-label">Precio</label>
        <div class="col-sm-2">
            <input type="number" class="form-control form-control-sm" id="txtUnitPrice">
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary" id="btnAdd">Agregar</button>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <table class="table table-hover" id="tbDetail">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio Unitario</th>
                        <th scope="col">SubTotal</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-auto">
        <button type="button" class="btn btn-success" id="btnSave">Guardar</button>
    </div>
</form>
<script>

    
</script>